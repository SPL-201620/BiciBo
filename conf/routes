# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
#GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
#GET     /message                    controllers.AsyncController.message

#Estudiantes
POST    /students/add               controllers.StudentController.addStudent()
GET     /students/all               controllers.StudentController.listStudents()
#Usuarios
POST    /user/add                   controllers.UsuarioController.createUser()
POST    /login                      controllers.UsuarioController.loginUser()
PUT     /user/update                controllers.UsuarioController.updateUser()
GET     /user/:id                   controllers.UsuarioController.getUser(id: Integer)
GET     /users                      controllers.UsuarioController.getUsers()
GET     /user/:id/friends           controllers.UsuarioController.getFriends(id: Integer)
POST    /friends/add                controllers.UsuarioController.addFriend()
#Recorridos
GET     /recorridos                 controllers.RecorridoController.getRecorridos()
GET     /recorridosUser/:id         controllers.RecorridoController.getRecorridosUsuario(id: Integer)
GET     /recorrido/:id              controllers.RecorridoController.getRecorrido(id: Integer)
POST    /recorrido/add              controllers.RecorridoController.createRecorrido()
PUT     /recorrido/update           controllers.RecorridoController.updateRecorrido()
#RecorridosGrupales
GET     /recorridosGrupal           controllers.RecorridoGrupalController.getRecorridosGrupales()
GET     /recorridosGrupalUser/:id   controllers.RecorridoGrupalController.getRecorridosGrupalesUsuario(id: Integer)
GET     /recorridoGrupal/:id/:id2   controllers.RecorridoGrupalController.getRecorridoGrupal(id: Integer, id2: Integer)
POST    /recorridoGrupal/add        controllers.RecorridoGrupalController.createRecorridoGrupal()
PUT     /recorridoGrupal/update     controllers.RecorridoGrupalController.updateRecorridoGrupal()
POST    /recorridoGrupal/insert     controllers.RecorridoGrupalController.insertToRecorridoGrupal()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
